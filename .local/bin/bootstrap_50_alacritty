#!/usr/bin/env zsh

set -e
source "$HOME/.zshrc"

local terminfo_file="$(mktemp)"
echo_eval "curl --silent \\
    https://raw.githubusercontent.com/alacritty/alacritty/master/extra/alacritty.info > \\
    $terminfo_file"
echo_run tic -xe alacritty,alacritty-direct "$terminfo_file"
echo_run rm "$terminfo_file"

echo_eval "curl --silent \\
    https://raw.githubusercontent.com/alacritty/alacritty/master/extra/completions/_alacritty > \\
    $HOME/.config/zsh/completions/_alacritty"
