#!/usr/bin/env zsh

set -e

install_aur_package() {
  if command -v "$1" >/dev/null 2>&1; then
    info "Already installed $1"
    return
  fi

  aur_install $1
}

echo_run sudo pacman -Syu

echo_run sudo pacman --sync --needed --noconfirm \
  alacritty \
  bashtop \
  ctags \
  fd \
  firefox \
  fzf \
  git \
  glances \
  htop \
  jq \
  lightdm \
  lightdm-gtk-greeter \
  numlockx \
  ripgrep \
  terraform \
  tmux \
  vim \
  wmctrl \
  xdg-utils \
  zsh \

install_aur_package yay
install_aur_package ytop

echo_run sudo systemctl enable lightdm.service
