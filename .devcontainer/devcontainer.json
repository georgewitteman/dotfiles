{
  "name": "dotfiles",
  "image": "mcr.microsoft.com/devcontainers/base",
  "remoteUser": "vscode",
  "postCreateCommand": "./install.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "zsh",
            "env": {"SHLVL": "0"},
            "args": ["-li"]
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "bungcip.better-toml"
      ]
    }
  }
}
