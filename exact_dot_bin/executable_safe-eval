#!/bin/sh

printf "\033[33mRun \`%s\` (y/N)?\033[0m " "$*" >&2

read -r reply </dev/tty >&2
if ! [ "$reply" != "${reply#[Yy]}" ]; then
  unset reply
  return 1 2>/dev/null || exit 1
fi

unset reply

if [ -t 1 ] || [ -n "${FORCE_COLOR:-}" ]; then
  printf "\033[1;34m" >&2
fi
printf '$ %s\n' "$*" >&2
if [ -t 1 ] || [ -n "${FORCE_COLOR:-}" ]; then
  printf "\033[0m" >&2
fi

# shellcheck disable=SC2294
eval "$@"
