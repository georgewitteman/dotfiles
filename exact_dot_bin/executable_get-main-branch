#!/bin/sh

if ! in-git-repo; then
  exit 128
fi

GIT_HEAD="$(git symbolic-ref refs/remotes/origin/HEAD 2>/dev/null | sed 's@^refs/remotes/origin/@@')" 2>/dev/null
if [ -z "$GIT_HEAD" ]; then
  GIT_HEAD="$(git remote show origin | grep 'HEAD branch' | cut -d ':' -f 2 | cut -d ' ' -f 2)"
fi
echo "$GIT_HEAD"
